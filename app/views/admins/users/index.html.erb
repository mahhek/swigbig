<h1>Listing Users</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Email</th>
    <th>Active</th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%=h user.name %></td>
    <td><%=h user.email %></td>
    <td><%= user.confirmed? ? "Yes" : "No" %></td>
    <td><%= link_to 'Show', admins_user_path(user) %> |
    <%= link_to 'Edit', edit_admins_user_path(user) %> |
    <%= link_to 'Destroy', admins_user_path(user), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_admins_user_path %>
