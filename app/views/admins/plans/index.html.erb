<h1>Listing Plans</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Price</th>
    <th>Description</th>
    <th></th>
  </tr>

<% @plans.each do |plan| %>
  <tr>
    <td><%= plan.name %></td>
    <td><%= plan.price %></td>
    <td><%= plan.description.truncate(30) %></td>
    <td><%= link_to 'Show', admins_plan_path(plan) %> |
    <%= link_to 'Edit', edit_admins_plan_path(plan) %> |
    <%= link_to 'Destroy', admins_plan_path(plan), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Plan', new_admins_plan_path %>
