<html>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "SwigBig - The more people swigging, the better the deal." %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <%= yield :head %>
    <link href="" media="screen" rel="stylesheet" type="text/css" />
    <meta charset="utf-8">
    <meta property="og:title" content="swigBIG - Control the size of your swig!">
    <meta property="og:site_name" content="swigbig.com">
    <meta name="description" content="swigBIG - Control the size of your swig!">
    <meta name="keywords" content="drink specials, bar deals, cheap drinks, happy hours, drink coupons">
    <link href="/stylesheets/site.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/ga.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.js" type="text/javascript"></script>
    <script src="/javascripts/extras.js" type="text/javascript"></script>
    <script src="/javascripts/jquery_002.js" type="text/javascript"></script>
    </head>
    <body style="background:url('/images/bg.png') repeat-x scroll left top #719818;">
      <% if admin_signed_in? -%>
        <div class="wrapper">
          <div id="header">
            <div id="logo-box">
              <img src="/images/swig_logo.png" style="width: 260px; margin-left: 50px; margin-top: -15px;">
            </div>
            <div class="header_links" style="margin-right: -75px;">
              <div>
                <%= link_to "Home", admin_signed_in? ? admin_root_path : root_path, :id=>"home", :class=> "#{'active' if session[:button].eql?('home')}" %>
                <%= link_to "FAQ", faq_path, :id=>"faq", :class=> "#{'active' if session[:button].eql?('faq')}" %>
                <%= link_to "Coupons", admins_coupons_path, :id=>"coupon", :class=>"#{'active' if session[:button].eql?('coupon')}" %>
                <%= link_to "Slogans", admins_slogans_path, :id=>"slogan", :class=>"#{'active' if session[:button].eql?('slogan')}" %>
                <%= link_to "Logos", admins_logos_path, :id=>"logo", :class=>"#{'active' if session[:button].eql?('logo')}" %>
                <%= link_to "Plans", admins_plans_path, :id=>"plan", :class=>"#{'active' if session[:button].eql?('plan')}" %>
                <%= link_to "Deals", admins_deals_path, :id=>"deal", :class=>"#{'active' if session[:button].eql?('deal')}" %>
                <%= link_to "Bars", admins_bars_path, :id=>"bar", :class=>"#{'active' if session[:button].eql?('bar')}" %>
                <%= link_to "Users", admins_users_path, :id=>"user", :class=>"#{'active' if session[:button].eql?('user')}" %>
                <%= link_to "Rewards", admins_rewards_path, :id => "rewards", :class=> "#{'active' if session[:button].eql?('rewards')}" %>
                <%= link_to "Reward Classes", admins_reward_classes_path, :id => "reward_class", :class=> "#{'active' if session[:button].eql?('reward_class')}" %>
                <%= link_to "Payment Gateways", admins_payment_gateways_path, :id => "payment_gateway", :class=> "#{'active' if session[:button].eql?('payment_gateway')}" %>
                <%= link_to "Sign Out", destroy_admin_session_path, :method => :delete %>
              </div>
            </div>
          </div>
          <div id="all_content">
            <div class="container">

              <div class="side-column">
                <div id="filter-drink-types" class="filter-container sidebar_panel" style="padding: 18px; background-image: none;">
                  <h3 style="font-size: 14px;">
                    The more people swigging, the better the deal</h3>
                </div>

                <div class="sidebar_panel" style="margin-top: 10px;">
                  <a href="#" onclick="return recordOutboundLink(this, 'Outbound Links', 'apple.com');"><img src="/images/available_on_app_store.png"></a>
                </div>
                <div class="sidebar_panel">
                  <a href="#" onclick="return recordOutboundLink(this, 'Outbound Links', 'android.com');"><img src="/images/available_on_android.png"></a>
                </div>
              </div>
              <div class="main_content">
                <div id="map_canvas-container" class="no_notch">
                  <% flash.each do |key, msg| %>        
                    <%= content_tag :div, msg, :id => key %>
                  <% end %>
                  <%= render :partial => "shared/logo_and_slogan" %>
                  <br />
                  <h3 style="">Hey Admin, Welcome back!</h3>
                  <br />
                  <%= yield %>
                </div>
              </div>
            </div>
            <div class="clearfix">
            </div>
          </div>
        </div>
      <% end %>
      <div id="footer">
        <div class="left">
          <img src="/images/fb.png" width="50" height="50"/>
          <img src="/images/twitter.png" width="50" height="50" />
        </div>
        <div class="feed">Live Swig Feed: James J. just swigged at Duffy's in Chicago</div>
      </div>
    </body>
    </html>
