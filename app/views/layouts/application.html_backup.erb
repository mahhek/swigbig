<html>
  <meta http-equiv="content-type" content="text/html;charset=UTF-8" />
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "SwigBig - The more people swigging, the better the deal." %></title>
    <%= stylesheet_link_tag    "application" %>
    <%= javascript_include_tag "application" %>
    <%= csrf_meta_tags %>

    <%= yield :head %>
    <link href="" media="screen" rel="stylesheet" type="text/css" />
    <meta charset="utf-8">
    <meta property="og:title" content="swigBIG - Control the size of your swig!">
    <meta property="og:site_name" content="swigbig.com">
    <meta name="description" content="swigBIG - Control the size of your swig!">
    <meta name="keywords" content="drink specials, bar deals, cheap drinks, happy hours, drink coupons">
    <link href="/stylesheets/site.css" rel="stylesheet" type="text/css">
    <script src="/javascripts/ga.js" type="text/javascript"></script>
    <script src="/javascripts/jquery.js" type="text/javascript"></script>
    <script src="/javascripts/extras.js" type="text/javascript"></script>
    <script src="/javascripts/jquery_002.js" type="text/javascript"></script>
    </head>
    <body style="background:url('/images/bg.png') repeat-x scroll left top #719818;">
      <% if user_signed_in? -%>
        <div class="wrapper">
          <div id="header">
            <div id="logo-box">
              <img src="/images/swig_logo.png" style="width: 260px; margin-left: 17px; margin-top: -15px;">
            </div>
            <div class="header_links" style="margin-right: -165px;">
              <div>
                <%= link_to "Home", user_signed_in? ? user_root_path : root_path, :id=>"home", :class=> "#{'active' if session[:button].eql?('home')}" %>
                <%= link_to "Bars", home_bars_path, :id=>"bars", :class=> "#{'active' if session[:button].eql?('bars')}" %>
                <%= link_to "FAQ", faq_path, :id=>"faq", :class=> "#{'active' if session[:button].eql?('faq')}" %>
                <%= link_to "Contact", contact_path, :id=>"contact", :class=> "#{'active' if session[:button].eql?('contact')}" %>
                <%= link_to "Friends", friends_path, :id=>"friends", :class=> "#{'active' if session[:button].eql?('friends')}" %>
                <%= link_to "Inbox", messages_path, :id=>"inbox", :class=> "#{'active' if session[:button].eql?('inbox')}" %>
                <%= link_to "Top Ten Swigs", top_ten_swigs_swigs_path, :id=>"top_ten", :class=> "#{'active' if session[:button].eql?('top_ten')}" %>
                <%= link_to "Rewards", rewards_user_rewards_path, :id=>"reward", :class=> "#{'active' if session[:button].eql?('reward')}" %>
                <%= link_to "Favourite Bar", favourite_bar_path, :id=>"favourite", :class=> "#{'active' if session[:button].eql?('favourite')}" %>
                <%= link_to "My Account", account_path, :id=>"my_account", :class=> "#{'active' if session[:button].eql?('my_account')}" %>
                <%= link_to "Sign Out", destroy_user_session_path, :method => :delete %>
              </div>
            </div>
          </div>
          <div id="all_content">
            <div class="container">

              <div class="side-column">
                <div id="filter-drink-types" class="filter-container sidebar_panel" style="padding: 18px; background-image: none;">
                  <h3 style="font-size: 14px;">
                    The more people swigging, the better the deal</h3>
                </div>

                <div class="sidebar_panel" style="margin-top: 10px;">
                  <a href="#" onclick="return recordOutboundLink(this, 'Outbound Links', 'apple.com');"><img src="/images/available_on_app_store.png"></a>
                </div>
                <div class="sidebar_panel">
                  <a href="#" onclick="return recordOutboundLink(this, 'Outbound Links', 'android.com');"><img src="/images/available_on_android.png"></a>
                </div>
              </div>
              <div class="main_content">
                <div id="map_canvas-container" class="no_notch">
                  <% flash.each do |key, msg| %>
                    <%= content_tag :div, msg, :id => key %>
                  <% end %>
                  <%= yield %>
                </div>
              </div>
            </div>
            <div class="clearfix">
            </div>
          </div>
        </div>
      <% end %>
      <div id="footer">
        <div class="left">
          <img src="/images/fb.png" width="50" height="50"/>
          <img src="/images/twitter.png" width="50" height="50" />
        </div>
        <div class="feed">Live Swig Feed: James J. just swigged at Duffy's in Chicago</div>
      </div>
    </body>
    </html>
